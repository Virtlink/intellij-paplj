<idea-plugin version="2">
  <id>org.metaborg.paplj</id>
  <name>PAPLJ</name>
  <vendor email="info@metaborg.org" url="http://www.metaborg.org">Metaborg</vendor>

  <description><![CDATA[
      IntelliJ IDEA implementation of PAPLJ.
    ]]></description>

  <change-notes><![CDATA[
      Bug fixes and performance improvements.
    ]]>
  </change-notes>

  <idea-version since-build="141.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="org.metaborg.paplj.PapljFileTypeFactory"/>
    <lang.parserDefinition language="Paplj" implementationClass="org.metaborg.paplj.parser.PapljParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Paplj" implementationClass="org.metaborg.paplj.lexer.PapljSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="org.metaborg.paplj.PapljColorSettingsPage"/>
  </extensions>

  <actions>
  </actions>

</idea-plugin>